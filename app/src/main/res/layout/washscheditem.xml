<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#2A2A2A"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvScheduleName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Weekly Wash"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"/>

        <Switch
            android:id="@+id/swNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingStart="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvNextWashDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next wash: Jan 00, 0000 at 00:00 AM"
        android:textColor="#9ED0FF"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"/>

    <TextView
        android:id="@+id/tvItemsCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0/0 items need washing"
        android:textColor="#FF6B6B"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="2"/>

    <ProgressBar
        android:id="@+id/progressBarWear"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:progressTint="#9ED0FF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnMarkWashed"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="Mark Washed"
            android:textSize="12sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#000000"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnEditSchedule"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="Edit"
            android:textSize="12sp"
            android:backgroundTint="#9ED0FF"
            android:textColor="#000000"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnDeleteSchedule"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="Delete"
            android:textSize="12sp"
            android:backgroundTint="#FF6B6B"
            android:textColor="#000000"/>
    </LinearLayout>

</LinearLayout>