<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgDetail"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_clothing"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>

        <EditText
            android:id="@+id/etDetailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Clothing Name"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etDetailDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description (Optional)"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvCurrentWear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Current wears: 0"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>

            <!-- Max wear: TextView for view mode, EditText for edit mode -->
            <TextView
                android:id="@+id/tvMaxWearDisplay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Max wears: No limit"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:gravity="end"/>

            <EditText
                android:id="@+id/etMaxWearEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Max wears"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:gravity="end"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Area -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area:"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerAreaDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type:"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerTypeDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>

        <!-- View mode buttons -->
        <LinearLayout
            android:id="@+id/viewModeButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- First row: Edit and Delete -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edit"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delete"
                    android:backgroundTint="#F44336"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Second row: Wear (full width) -->
            <Button
                android:id="@+id/btnWear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wear"
                android:backgroundTint="#FF9800" />
        </LinearLayout>

        <!-- Edit mode buttons -->
        <LinearLayout
            android:id="@+id/editModeButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- First row: Save and Cancel -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save"
                    android:backgroundTint="#2196F3"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:backgroundTint="#FF9800"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Second row: Change Image (full width) -->
            <Button
                android:id="@+id/btnChangeImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Image"
                android:backgroundTint="#9C27B0" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>